{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin.css">
{% endblock %}
 {% block content %}
     <div class="block">

         <div>

             <form action="/admin/editarticlebyid/{{ article.id }}" method="post" enctype="multipart/form-data">
                 <legend> <h2>Modifier l'article</h2></legend>
                 <div>
                     <label for="upload">Votre photo : </label>
                     <input type="file" id="upload" name="upload" value="{{ article.image }}"/>
                 </div>
                 <div class="input">
                     <label for="title">Titre de l'article : </label>
                     <input type="text" id="title" name="title" value="{{ article.title }}">
                 </div>
                 <div class="input">
                     <label for="date">date de publication : </label>
                     <input type="text" id="date" name="date" value="{{ article.date }}">
                 </div>
                 <div class="input">
                     <label for="content">contenu de l'article : </label>
                     <textarea id="content" name="content" >{{ article.content }}</textarea>
                 </div>

                 <input type="submit" name="submit" value="Enregistrer"/>
             </form>
         </div>
 {% endblock %}